---
import NextJS from "../icons/NextJS.astro";
import Tailwind from "../icons/Tailwind.astro";

const TAGS = {
    NEXT: {
        name: "Next.js",
        color: "bg-black text-white",
        icon: NextJS,
    },
    TAILWIND: {
        name: "Tailwind CSS",
        color: "bg-[#003159] text-white",
        icon: Tailwind,
    },
};

const PROJECTS = [
    {
        title: "SVGL - A beautiful and simple SVG library",
        description:
            "Created from scratch, SVGL is a beautiful and simple SVG library that allows you to create SVGs with a simple and intuitive API.",
        link: "https://shots.so/",
        githutb: "https://github.com/pheralb/svgl",
        image: "/projects/svgl.webp",
        tags: [TAGS.NEXT, TAGS.TAILWIND],
    }
];
---

<div>
    {
        PROJECTS.map(({ title, description, tags, image }) => (
            <article>
                <h3 class="text-2xl font-semibold text-orange-500/80 mb-2">
                    {title}
                </h3>
                <p class="text-lg mb-4 text-pretty">{description}</p>
                <ul class="flex gap-x-2 flex-row mb-2">
                    {tags.map((tag) => (
                        <li>
                            <span class={`flex gap-x-2 rounded-full text-xs ${tag.color} py-1 px-2 items-center`}>
                                <tag.icon class="size-6" />
                                {tag.name}
                            </span>
                        </li>
                    ))}
                </ul>
                <img
                    class="rounded shadow-2xl shadow-white/10"
                    src={image}
                    alt={`Captura de pantalla del proyecto ${title}`}
                />
            </article>
        ))
    }
</div>
