---
import Bagde from "../components/Bagde.astro";
import Layout from "../layouts/Layout.astro";
import Linkedin from "../icons/Linkedin.astro";
import SocialPill from "../components/SocialPill.astro";
import GitHub from "../icons/GitHub.astro";
import EmailIcon from "../icons/EmailIcon.astro";	
import Experience from "../components/Experience.astro";
import SectionContainer from "../components/SectionContainer.astro";
import BriefCase from "../icons/BriefCase.astro";
import Code from "../icons/Code.astro";
import Projects from "../components/Projects.astro";
---

<Layout title="Portfolio de Felipe Bastidas - Desarrollador y Programador Web"
	description="Contrata a Felipe Bastidas para desarrollar tu sitio web o aplicación web.">
	<main class="px-4">
		<SectionContainer class="py-44 pb-32">
			<h1
				class="text-white text-2xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10"
			>
				Hola, Soy Juan Felipe Bastidas <a
					href="https://www.linkedin.com/in/juan-bastidas-b18237295/"
					target="_blank"
					rel="noopener noreferrer"
					class="flex justify-center items-center"
				>
					<Bagde>Disponible para trabajar </Bagde>
				</a>
			</h1>
			<h2 class="text-xl lg:text-2xl text-wrap max-w-[700px]">
				<span>1 año de experiencia.</span>
				<span class="text-green-500">Desarrollador Web Full-Stack.</span
				>
				<span class="text-orange-400">De Manizales,Colombia.</span>
				<span class="opacity-80">
					Especializado en crear soluciones profesionales.</span
				>
			</h2>
			<nav class="flex gap-3 mt-8 flex-wrap">
				<SocialPill href="https://www.linkedin.com/in/juan-bastidas-b18237295/">
					<Linkedin class="size-4 md:size-6" />LinkedIn
				</SocialPill>
				<SocialPill href="https://github.com/Felipebastidas1105">
					<GitHub class="size-4 md:size-6" />GitHub
				</SocialPill>
				<SocialPill href="mailto:juanfelipebastidas1105@gmail.com">
					<EmailIcon class="size-4 md:size-6" />juanfelipebastidas1105@gmail.com
				</SocialPill>
			</nav>
		</SectionContainer>
		<SectionContainer id="experiencia">
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
				<BriefCase class="size-8"/>
				Experiencia laboral
			</h2>
			<Experience/>
		</SectionContainer>
		<SectionContainer id="projects">
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
				<Code class="size-8"/>
				Proyectos
			</h2>
			<Projects/>
		</SectionContainer>
	</main>
</Layout>
